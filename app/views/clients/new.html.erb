<%= form_for @client do |f| %>
<p class = "title">Join Zeetimes now!!</p>
<%= render 'shared/error_messages' %>
<table align = "center" class="tablepnl" cellpadding="0" cellspacing="0">
	<tr>
		<td colspan="2" class = "pnlheader">
			<%= label_tag 'createAccountHeader', 'Create an Account'%>
		</td>
	</tr>
	<tr>
		<td>
			<table border="0" style="width: 50%;" align="center">		
				<tr class = "field">		
					<td>
						<%= f.text_field :login_name, :placeholder => "Preferred login name" %>
					</td>
				</tr>
				<tr class = "field">		
					<td>
						<%= f.password_field :password, :placeholder => "Password" %>
					</td>
				</tr>
				<tr class = "field">		
					<td>
						<%= f.text_field :first_name, :placeholder => "First Name" %>
					</td>
				</tr>				
				<tr class = "field">		
					<td>
						<%= f.text_field :contact_email, :placeholder => "Email" %>
					</td>
				</tr>				
				<tr class = "field">		
					<td>
						<%= f.text_field :company_website, :placeholder => "Website" %>
					</td>
				</tr>
				<tr class = "field">		
					<td>
						<%= f.text_field :company_address1, :placeholder => "Street Address 1" %>
					</td>
				</tr>				
				<tr class = "field">		
					<td>
						<%= f.text_field :company_city, :placeholder => "City" %>
					</td>
				</tr>				
				<tr class = "field">		
					<td>
						<%= f.text_field :company_pincode, :placeholder => "Pincode" %>
					</td>
				</tr>						
			</table>
		</td>
		<td>
			<table border="0" style="width: 50%;" align="center">		
				<tr class = "field">		
					<td>
						<%= f.text_field :company_name, :placeholder => "Company" %>
					</td>
				</tr>
				<tr class = "field">		
					<td>
						<%= f.password_field :password_confirmation, :placeholder => "Confirm password" %>
					</td>
				</tr>
				<tr class = "field">		
					<td>
						<%= f.text_field :last_name, :placeholder => "Last Name" %>
					</td>
				</tr>								
				<tr class = "field">		
					<td>
						<%= f.text_field :contact_phone, :placeholder => "Phone" %>
					</td>
				</tr>				
				<tr class = "field">		
					<td>
						<%= f.text_field :contact_fax, :placeholder => "Fax" %>
					</td>
				</tr>
				<tr class = "field">		
					<td>
						<%= f.text_field :company_address2, :placeholder => "Street Address 2" %>
					</td>
				</tr>				
				<tr class = "field">		
					<td>
						<%= f.text_field :company_state, :placeholder => "State" %>
					</td>
				</tr>				
				<tr class = "field">		
					<td>
						<%= f.select :company_country, ['--Select Country--','United States Of America','India'] %>
					</td>
				</tr>						
			</table>
		</td>
	</tr>
	<tr class = "field">
		<td colspan="2" style="text-align:center;">
			<%= f.submit "Sign Up"%>
		</td>		
	</tr>	
</table>
<% end %>

